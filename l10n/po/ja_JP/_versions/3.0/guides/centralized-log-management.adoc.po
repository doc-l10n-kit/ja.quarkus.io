#, no-wrap
msgid ""
"services:\n"
"  elasticsearch:\n"
"    image: {elasticsearch-image}\n"
"    ports:\n"
"      - \"9200:9200\"\n"
"      - \"9300:9300\"\n"
"    environment:\n"
"      ES_JAVA_OPTS: \"-Xms512m -Xmx512m\"\n"
"      discovery.type: \"single-node\"\n"
"    networks:\n"
"      - elk\n"
