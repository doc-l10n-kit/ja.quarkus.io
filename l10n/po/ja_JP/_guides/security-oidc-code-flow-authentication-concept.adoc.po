"\t            }\n"
msgstr ""

#. type: delimited block -
#: upstream/_guides/security-oidc-code-flow-authentication-concept.adoc:637
#, no-wrap
msgid ""
"\t        });\n"
"\t        identity = builder.build();\n"
"        }\n"
"        return Uni.createFrom().item(identity);\n"
"    }\n"
msgstr ""

#. type: delimited block -
#: upstream/_guides/security-oidc-code-flow-authentication-concept.adoc:639
#, no-wrap
msgid "}\n"
msgstr ""

#. type: Plain text
